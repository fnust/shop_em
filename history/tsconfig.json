{
  "compilerOptions": {
    "lib": ["es5", "es6"],
    "target": "ES6",
    "strictNullChecks": true,
    "module": "es2022",
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "outDir": "./dist",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "typeRoots": ["./node_modules/@types"],
    "sourceMap": false,
    "types": ["node"]
  },
  "include": ["."],
  "exclude": ["./node_modules"]
}
